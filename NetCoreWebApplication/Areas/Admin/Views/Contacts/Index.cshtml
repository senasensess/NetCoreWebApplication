@model IEnumerable<Entities.Contact>

@{
    ViewData["Title"] = "İletişim Formları";
}

<h1>İletişim Formları</h1>

<p>
    <a class="btn btn-outline-primary " asp-area="admin" asp-controller="Contacts" asp-action="Create">Yeni İletişim Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-success btn-sm" asp-route-id="@item.Id">Güncelle</a> |

                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
