@model IEnumerable<Entities.News>

@{
    ViewData["Title"] = "Haberler";
}

<h1>Haberler</h1>

<p>
    <a class="btn btn-outline-primary " asp-area="admin" asp-controller="News" asp-action="Create">Yeni Haber Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.Image)" height="50">
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-success btn-sm" asp-route-id="@item.Id">Güncelle</a> |

                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
