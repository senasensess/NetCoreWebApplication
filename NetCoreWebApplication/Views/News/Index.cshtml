@model IEnumerable<Entities.News>

@{
    ViewData["Title"] ="Haberler";
}

<div class="container">
    <h2 class="mt-5 mb-5 text-center">Bizden Haberler</h2>
    <div class="row text-center ">
        @foreach (var item in Model)
        {


            <div class="col-lg-4 ">

                <img src="/Img/@item.Image" alt="@item.Name" class="bd-placeholder-img rounded-circle" width="140" height="140" />
                <h2 class="fw-normal">@item.Name</h2>
                <p class="text-truncate">@item.Content</p>
                <p><a class="btn btn-secondary" href="/news/detail/@item.Id">Detayını gör »</a></p>
            </div>

        }

    </div>
</div>

